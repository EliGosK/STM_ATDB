@model System.Web.Mvc.HandleErrorInfo
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <div class="jumbotron margin-top-15">
        <h1>500 : Internal Server Error</h1>
    </div>
    <div class="error-contaienr">
        <h1><i class="fa fa-times-circle"></i> There are something wrong while server executing your request.</h1>
        @{ 
            if (Request.IsLocal) {
                if (Model != null && Model.Exception != null) {
                    
                    <div class="alert alert-warning">
                        <h2>Exception was: @Model.Exception.Message</h2>
                        <div>
                            Stack Trace: @Model.Exception.StackTrace
                        </div>
                    </div>                    
                }
            }
        }
        <div class="text-right">
            STM IT
        </div>
    </div>
    
</div>

